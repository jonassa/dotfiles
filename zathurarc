set font 'Roboto 10'
set window-icon /usr/share/icons/Papirus/22x22/mimetypes/application-pdf.svg
set first-page-column 1:2
set selection-clipboard clipboard
set window-title-basename true
set statusbar-home-tilde true

set guioptions sv

set recolor-lightcolor "#2e3440"
set recolor-darkcolor "#d8dee9"
set default-bg "#2e3440"
set statusbar-bg "#2e3440"
set statusbar-fg "#d8dee9"
set index-bg "#2e3440"
set index-fg "#d8dee9"
set index-active-bg "#3f8ca8"
set index-active-fg "#d8dee9"

set window-height 1000
set window-width 800
set adjust-open width


set scroll-step 200

set incremental-search true
set smooth-scroll true

map [normal]     f navigate next
map [fullscreen] f navigate next
map [normal]     b navigate previous
map [fullscreen] b navigate previous
map [normal]     d scroll half-down
map [fullscreen] d scroll half-down
map [normal]     u scroll half-up
map [fullscreen] u scroll half-up

map s search
map S search backward

map w adjust_window width
map W adjust_window best-fit

