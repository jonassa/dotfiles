[user]
    name = Jonas Sandberg
    email = jonas.sandb@gmail.com
[core]
	excludesfile = /home/jonas/.gitignore_global
[pager]
    log  = /usr/bin/diffr | less -RFX
    show = /usr/bin/diffr | less -RFX
    diff = /usr/bin/diffr | less -RFX
    branch = false
    reflog = false
[diff]
    tool = nvim
[difftool]
    prompt = false
[difftool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED
[difftool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE
[merge]
    tool = nvim
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nvim"]
    ; doesn't work
    cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[color]
    ui = auto
    interactive = auto
    pager = true
[color "status"]
    added = green
    untracked = cyan
    unmerged = magenta
[push]
	default = current
[pull]
	rebase = false
