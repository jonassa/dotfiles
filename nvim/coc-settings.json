{
    "languageserver": {
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        }
    },
    "diagnostic.displayByAle": true,
    "suggest.minTriggerInputLength": 2,
    "diagnostic.warningSign":"--",
    "list.insertMappings": {
        "<C-r>": "do:refresh",
        "<C-f>": "feedkeys:\\<C-f>",
        "<C-b>": "feedkeys:\\<C-b>",
        "<C-n>": "normal:j",
        "<C-p>": "normal:k",
        "<A-j>": "normal:j",
        "<A-k>": "normal:k",
        "<A-n>": "prompt:next", // does not work
        "<A-p>": "prompt:previous", // does not work
        "<Tab>": "normal:j",
        "<S-Tab>": "normal:k",
        "<C-t>": "action:tabe",
        "<C-x>": "call:MyFunc",
        "<C-C>": "do:exit",
        "<C-v>": "eval:@@"
    },
    // Default python completion is Jedi. Disable Jedi to use MS LS. Palantir LS  requires custom langserv.
    // "python.jediEnabled": false
}
